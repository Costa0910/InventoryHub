@page "/products"
@using ClientApp.Services
@using global::Shared.DTOs
@inject ProductApiService ProductService
@inject NotificationService Notifications
@inject IJSRuntime Js
@inject ProductState ProductState
@implements IDisposable

<h3>Products</h3>

<div class="d-flex mb-3 gap-2">
    <input class="form-control me-2" placeholder="Search by name or description" @bind="_search" @bind:event="oninput"/>
    <button class="btn btn-outline-secondary" @onclick="Refresh">Refresh</button>
    <button class="btn btn-primary ms-auto" @onclick="() => _createModal?.Show()">Create Product</button>
</div>

@if (_loading)
{
    <div>Loading...</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Category</th>
                <th class="text-end">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var p in FilteredProducts)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.Description</td>
                    <td>@p.Price.ToString("C2")</td>
                    <td>@p.Stock</td>
                    <td>@p.CategoryName</td>
                    <td class="text-end">
                        <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => ViewDetails(p)">View
                        </button>
                        <button class="btn btn-sm btn-outline-secondary me-1" @onclick="() => EditProduct(p)">Edit
                        </button>
                        <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDeleteModal(p.Id)">Delete</button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

<ConfirmModal @ref="_confirmModal" Title="Delete product" Message="Are you sure you want to delete this product?"
              OnConfirmed="OnConfirmedDelete"/>
<ProductDetailsModal @ref="_detailsModal" Product="_selected"/>
<CreateProductModal @ref="_createModal"/>
<EditProductModal @ref="_editModal"/>

@code {
    private List<ProductDto> _products = [];
    private string _search = string.Empty;
    private bool _loading = true;

    private IEnumerable<ProductDto> FilteredProducts => string.IsNullOrWhiteSpace(_search)
        ? _products
        : _products.Where(p => (p.Name ?? string.Empty).Contains(_search, StringComparison.OrdinalIgnoreCase)
                               || (p.Description ?? string.Empty).Contains(_search, StringComparison.OrdinalIgnoreCase));

    private ConfirmModal? _confirmModal;
    private ProductDetailsModal? _detailsModal;
    private EditProductModal? _editModal;
    private CreateProductModal? _createModal;
    private ProductDto? _selected;
    private int _pendingDeleteId;

    protected override async Task OnInitializedAsync()
    {
        ProductState.OnChange += OnStateChanged;
        await LoadAsync();
    }

    public void Dispose()
    {
        ProductState.OnChange -= OnStateChanged;
    }

    private async Task LoadAsync()
    {
        _loading = true;
        StateHasChanged();
        var res = await ProductService.GetAllAsync();
        if (res is { IsSuccess: true, Data: not null })
        {
            _products = res.Data.ToList();
            ProductState.SetAll(_products);
        }
        else
        {
            Notifications.Add(res.ErrorMessage ?? "Failed to load products", "Error", NotificationLevel.Error, 8000);
        }

        _loading = false;
        StateHasChanged();
    }

    private async Task Refresh()
    {
        await LoadAsync();
    }

    private void ViewDetails(ProductDto p)
    {
        _selected = p;
        _detailsModal?.Show();
    }

    private void EditProduct(ProductDto p)
    {
        _editModal?.Show(p);
    }

    private void ConfirmDeleteModal(int id)
    {
        _pendingDeleteId = id;
        _confirmModal?.Show();
    }

    private async Task OnConfirmedDelete(bool confirmed)
    {
        if (!confirmed) return;
        var res = await ProductService.DeleteAsync(_pendingDeleteId);
        if (res.IsSuccess)
        {
            Notifications.Add("Product deleted", "Deleted", NotificationLevel.Success, 4000);
            ProductState.Remove(_pendingDeleteId);
        }
        else
        {
            Notifications.Add(res.ErrorMessage ?? "Delete failed", "Error", NotificationLevel.Error, 8000);
        }
    }

    private void OnStateChanged()
    {
        _products = ProductState.Items.ToList();
        StateHasChanged();
    }

}
